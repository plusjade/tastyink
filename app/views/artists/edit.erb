<% form_for @artist do |f| %>
  <%= f.error_messages %>
  
  <div class="right-half">
    <fieldset>
      <%= f.label :bio %><br />
      <%= f.text_area :bio %>
    </fieldset>
  </div>
  
  <div class="left-half">
    <!--
    <fieldset class="buttons">
      <button type="submit" class="positive">Save Changes</button>
    </fieldset>
    -->
    <fieldset>
      <%= f.label :name %> <span class="star_req">*</span>
      <br /><%= f.text_field :name, :rel => 'text_req' %>
    </fieldset>    
  </div>

<% end %>

