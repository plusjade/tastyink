<h1>New artist</h1>

<% form_for(@artist) do |f| %>
  <%= f.error_messages %>
  
  <div class="left-half">
    <fieldset>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </fieldset>
    <fieldset>
      <%= f.label :bio %><br />
      <%= f.text_area :bio %>
    </fieldset>
    <fieldset>
      <%= f.submit "Create" %>
    </fieldset>
  </div>
<% end %>
