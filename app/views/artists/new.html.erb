<h1>New artist</h1>

<% form_for([@shop, @artist], :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
  <%= f.file_field :data %>
  </p>
  
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', shop_artists_path(@shop) %>
