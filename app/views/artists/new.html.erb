<h1>New artist</h1>

<% form_for([@shop, @artist], :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
  <div class="right-half">
    <fieldset>
    <%= f.file_field :data %>
    </fieldset>
  </div>
  
  <div class="left-half">
    <fieldset>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </fieldset>
    <fieldset>
      <%= f.label :bio %><br />
      <%= f.text_area :bio %>
    </fieldset>
    <fieldset>
      <%= f.submit "Create" %>
    </fieldset>
  </div>
<% end %>
