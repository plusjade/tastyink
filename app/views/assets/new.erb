
<% form_for asset, {:url => '/assets' , :html => { :multipart => true } } do |f| %>
  <%= f.error_messages %>

  <div class="right-half">
    <fieldset class="buttons">
      <button type="submit" id="upload_submit" class="positive">Upload Images</button>
    </fieldset>
  </div> 
  
  <div class="left-half">
    <fieldset>
      <%= f.label :data, "Upload Images" %>
      <br/><%= f.file_field :data %>
    </fieldset>
  </div> 
   
<% end %>

<br style="clear:both"/>
