<div class="gallery-contents t-js-contents">
  <a href="#" id="show" class="toggle-details show">[+] Details</a>
  <div class="gallery-body">
    <a href="#" id="hide" class="toggle-details hide">[-]</a>
    <div class="t-js-details">
      <h2>' + t.title + '</h2>
      <b>Added:</b> ' + t.created_at + '
      <br/><b>Tags:</b> test, test, test
      <br/><b>Notes:</b>
      <div>
        ' + t.desc + '
      </div>
    </div>
    <div class="t-js-artist-details">
      <h2>By: ' + a.name + '</h2>
      <p>
        ' + a.bio + '
      </p>
      <a href="#" id="do-artist" class="do-artist" name="' + a.id + '">View ' + a.name + '&#146;s Profile</a>
    </div>
  </div>

  <div class="gallery-images">
    <img src="' + assetUrl + t.assets[0].id +'/gallery/'+ t.assets[0].data_file_name +'" />
  </div>
</div>

