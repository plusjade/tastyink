<% form_for @tattoo, :url => tattoos_path do |f| %>
  <%= f.error_messages %>

  <div class="right-half">
    <fieldset>
      <%= f.label :title, "Title" %> <span class="star_req">*</span>
      <br /><%= f.text_field :title, :rel => 'text_req' %>
    </fieldset>
      
    <fieldset>
      Belongs to: <%= f.select(:artist_id, @shop.artists.collect {|a| [ a.name, a.id ] } ) %>
    </fieldset>
    
    <fieldset>
      <%= f.label :desc, 'Description' %>
      <br /><%= f.text_area :desc %>
    </fieldset>
    
  </div>
  
  <div class="right-half">
    <fieldset class="buttons">
      <button type="submit" class="positive">Add New Tattoo</button>
    </fieldset>
    Images can be added in the next step =)
  </div> 
  
<% end %>
<br style="clear:both"/>


